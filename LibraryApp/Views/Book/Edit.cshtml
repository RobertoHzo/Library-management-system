@model LibraryApp.Models.Book

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id_Book" />
			@if (ViewBag.Option == 1)
			{
				<div class="form-group">
					<label asp-for="ISBN" class="control-label"></label>
					<input asp-for="ISBN" class="form-control" required/>
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
			}
			else if (ViewBag.Option == 0)
			{
				<div class="form-group">
					<label asp-for="Title" class="control-label"></label>
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Author" class="control-label"></label>
					<input asp-for="Author" class="form-control" />
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Id_Section" class="control-label"></label>
					<select asp-for="Id_Section" asp-items="@ViewBag.Sections"></select>
					<span asp-validation-for="Id_Section" class="text-danger"></span>
				</div>
				<div class="form-group">
					<p><b>Actual image:</b> </p>
					<img src="~/booksImages/@Model.Image" width="80px" height="80px" />
				</div>
				
				<div class="form-group">
					<label asp-for="ImageFile" class="control-label"></label>
					<input asp-for="ImageFile" class="form-control" />
					<span asp-validation-for="ImageFile" class="text-danger"></span>
				</div>
			}

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

