@model IEnumerable<SavedGroupViewModel>

@{
	ViewData["Title"] = "Saved books";
}

<h1>Saved books</h1>


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Id_Member)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Id_Member)
				</td>
				<td>
					<form asp-action="DeleteSavedBook">
						<input name="Id_SavedGroup" type="hidden" value="@item.Id_SavedGroup">
						<button type="submit" class="btn btn-outline-danger">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
