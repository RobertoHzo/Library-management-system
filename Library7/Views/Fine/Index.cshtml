@model IEnumerable<Library7.Models.Fine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="IndxTbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Loan)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Id_Loan)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Fine">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id_Fine">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_Fine">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#IndxTbl').DataTable();
        });
    </script>
}
